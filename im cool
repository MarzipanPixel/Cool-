/* file: R1.cpp */
#include <iostream>

using namespace std;

int main (void){
  int n;  
  int i = 1;
  float k = 1;
  float summe = 0;
 
 cout << "Please enter a number" << endl;
 cin >> n;
 
    while(i <= n){
      k = 2*k;
      summe = summe + 1 / k;     
      i++;
    }
  
  cout << "n = " << summe << endl;
  return 0;
}

